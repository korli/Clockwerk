SubDir TOP src shared network ;

# system include directories
local sysIncludeDirs =
	include/cryptlib
;

local sysIncludeDir ;
for sysIncludeDir in $(sysIncludeDirs) {
	SubDirSysHdrs [ FDirName $(TOP) $(sysIncludeDir) ] ;
}


# local include directories (relative to src/)
local localIncludeDirs =
	shared
	shared/generic
	shared/generic/logging
	shared/generic/xml
	shared/painter
;

local localIncludeDir ;
for localIncludeDir in $(localIncludeDirs) {
	SubDirHdrs [ FDirName $(TOP) src $(localIncludeDir) ] ;
}

StaticLibrary libshared_network.a :
	AbstractConnection.cpp
	Channel.cpp
	Connection.cpp
	ConnectionFactory.cpp
	InsecureChannel.cpp
	InsecureConnection.cpp
	NetAddress.cpp
	NetFSDefs.cpp
	RequestChannel.cpp
	RequestConnection.cpp
	RequestHandler.cpp
	RequestXMLConverter.cpp
	SocketConnection.cpp
	SSLChannel.cpp
	SSLConnection.cpp
;

MakeLocate libshared_network.a : [ FDirName $(OBJECTS_DIR) lib ] ;

